        <div>
          <h3 class="text-lg font-semibold text-gray-900">Real Estate Prices</h3>
          <p class="mt-1 text-sm text-gray-500">Predict property values based on location, size, and features</p>
        </div>
      </div>
    </a>

    <a href="/car-prices" class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-all cursor-pointer">
      <div class="flex items-center space-x-4">
        <div class="flex-shrink-0">
          <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Car Prices</h3>
          <p class="mt-1 text-sm text-gray-500">Estimate vehicle values using brand, model, year, and condition</p>
        </div>
      </div>
    </a>
  </div>

  <!-- Recent Predictions -->
  {loadPage.data.recentPredictions.length > 0 ?
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Predictions</h2>
        <div class="space-y-4">
          {loadPage.data.recentPredictions.map(prediction =>

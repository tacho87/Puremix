                  <p class="text-sm text-gray-600">
                    {prediction.type === 'real-estate' ?
                      <span>{prediction.input.location} - {prediction.input.square_meters} sqm</span>
                      :
                      <span>{prediction.input.brand} {prediction.input.model} ({prediction.input.year})</span>
                    }
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-lg font-bold text-primary">
                    {prediction.priceInK}K
                  </p>

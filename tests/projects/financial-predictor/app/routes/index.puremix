<layout>main</layout>

<imports>
  import PredictionForm from '../components/PredictionForm.puremix'
  import ResultChart from '../components/ResultChart.puremix'
  import StatisticsPanel from '../components/StatisticsPanel.puremix'
</imports>

<loader>
  async function loadPage(request, actionResult) {
    actionResult = actionResult || null;
    // Get prediction history
    const { DataManager } = await import('../lib/data-manager.js');
    const recentPredictions = await DataManager.getPredictionHistory(5);

    // Add computed properties for template display
    const enrichedPredictions = recentPredictions.map(p => ({
      ...p,
      priceInK: Math.round(p.result.predicted_price / 1000),
      formattedDate: new Date(p.timestamp).toLocaleDateString()
    }));

    // Handle action results (from form submissions)
    let predictionResult = null;
    if (actionResult && actionResult.prediction) {
      predictionResult = actionResult.prediction;
    }

    return {
      data: {
        recentPredictions: enrichedPredictions,
        predictionResult,
        pageTitle: 'Financial Predictor - ML-Powered Predictions'
      }
    };
  }
</loader>

<div class="space-y-8">
  <!-- Hero Section -->
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
      ü§ñ Financial Predictor
    </h1>
    <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      Machine Learning-powered price predictions for Real Estate and Vehicles.
      Our models analyze thousands of data points to provide accurate estimates.
    </p>
  </div>

  <!-- Prediction Type Selection -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
    <a href="/real-estate" class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-all cursor-pointer">
      <div class="flex items-center space-x-4">
        <div class="flex-shrink-0">
          <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />

<layout>main</layout>

<imports>
  import { validate_data, process_data } from '../lib/data_processor'
  import { get_user_profile, authenticate_user } from '../controllers/user_controller'
  import { format_text, validate_email } from '../lib/utils/string_helpers'
</imports>

<loader>
  async function loadSeamlessPythonTest(request) {
    try {
      // Test seamless Python imports - these should work like JavaScript functions!

      // Test data processing
      const testData = [
        { name: 'Alice', email: 'alice@example.com', score: 95 },
        { name: 'Bob', email: 'bob@example.com', score: 87 }
      ];

      const processedData = await process_data(testData);

      // Test data validation
      const validationRules = ['required_fields', 'email_format', 'score_range'];
      const validationResult = await validate_data(testData, validationRules);

      // Test user profile
      const userProfile = await get_user_profile(123);

      // Test string formatting
      const formattedText = await format_text('hello world', {
        uppercase: true,
        trim: true
      });

      // Test email validation
      const emailValidation = await validate_email('test@example.com');

      return {
        data: {
          processedData,
          validationResult,
          userProfile,
          formattedText,
          emailValidation,
          testPassed: true
        }
      };
    } catch (error) {
      console.error('Seamless Python test error:', error);
      return {
        data: {
          error: error.message,
          testPassed: false
        }
      };
    }
  }
</loader>

<div class="seamless-python-test">
  <div class="header">
    <h1>üêç Seamless Python Import Test</h1>
    <p class="subtitle">Testing true language-agnostic programming</p>
  </div>

  {loadSeamlessPythonTest.data.testPassed ?
    <div class="success-section">
      <h2>‚úÖ Python Imports Working Seamlessly!</h2>

      <div class="test-results">
        <div class="result-card">
          <h3>üìä Data Processing Result</h3>
          <pre>{JSON.stringify(loadSeamlessPythonTest.data.processedData, null, 2)}</pre>
        </div>

        <div class="result-card">
          <h3>‚úÖ Data Validation Result</h3>
          <pre>{JSON.stringify(loadSeamlessPythonTest.data.validationResult, null, 2)}</pre>
        </div>

        <div class="result-card">
          <h3>üë§ User Profile Result</h3>
          <pre>{JSON.stringify(loadSeamlessPythonTest.data.userProfile, null, 2)}</pre>
        </div>

        <div class="result-card">
          <h3>üî§ Text Formatting Result</h3>
          <pre>{JSON.stringify(loadSeamlessPythonTest.data.formattedText, null, 2)}</pre>
        </div>

        <div class="result-card">
          <h3>üìß Email Validation Result</h3>
          <pre>{JSON.stringify(loadSeamlessPythonTest.data.emailValidation, null, 2)}</pre>
        </div>
      </div>

      <div class="import-demonstration">
        <h2>üöÄ Import Syntax Used</h2>
        <pre><code>import { validate_data, process_data } from '../lib/data_processor'
import { get_user_profile, authenticate_user } from '../controllers/user_controller'
import { format_text, validate_email } from '../lib/utils/string_helpers'

// Then use them like regular JavaScript functions:
const result = await validate_data(testData, rules);
const profile = await get_user_profile(userId);
const formatted = await format_text(text, options);</code></pre>
      </div>
    </div>
  :
    <div class="error-section">
      <h2>‚ùå Python Import Test Failed</h2>
      <div class="error-details">
        <pre>{loadSeamlessPythonTest.data.error}</pre>
      </div>
    </div>
  }
</div>


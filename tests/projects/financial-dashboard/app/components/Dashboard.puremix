<imports>
  import { DataManager } from '../lib/data-manager.js'
  import FinancialChart from './FinancialChart.puremix'
  import MetricsWidget from './MetricsWidget.puremix'
  import UserList from './UserList.puremix'
  import TransactionTable from './TransactionTable.puremix'
</imports>

<loader>
  async function loadDashboard(request, actionResult) {
    // Load financial data
    const financialData = await DataManager.readData('financial-data.json');
    const users = await DataManager.readData('users.json');
    const transactions = await DataManager.readData('transactions.json');

    // Handle action results
    let refreshData = null;
    if (actionResult) {
      refreshData = {
        message: actionResult.message || 'Dashboard updated successfully',
        type: actionResult.type || 'success',
        timestamp: new Date().toISOString()
      };
    }

    // Calculate real-time metrics
    const activeUsersCount = users.filter(u => u.isActive).length;
    const recentTransactions = transactions
      .sort((a, b) => new Date(b.date) - new Date(a.date))
      .slice(0, 5);

    return {
      data: {
        financialData,
        users,
        transactions,
        activeUsersCount,
        recentTransactions,
        refreshData
      },
      state: {
        isLoading: false,
        lastUpdated: new Date().toISOString()
      }
    };
  }
</loader>

<div class="space-y-6">
  <!-- Header with actions -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Financial Dashboard</h1>
      <p class="mt-1 text-sm text-gray-600">
        Last updated: {new Date(loadDashboard.state.lastUpdated).toLocaleString()}
      </p>
    </div>
    <div class="flex space-x-3">
      <button
        onclick="Dashboard.refreshData"
        class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-blue-600 transition-colors flex items-center space-x-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span>Refresh</span>
      </button>
      <button
        onclick="Dashboard.exportData"
        class="px-4 py-2 bg-secondary text-white rounded-lg hover:bg-purple-600 transition-colors flex items-center space-x-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span>Export</span>
      </button>
    </div>
  </div>

  <!-- Notification for action results -->
  {loadDashboard.data.refreshData ?
    <div class="p-4 rounded-lg bg-green-50 border border-green-200">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="text-green-800">{loadDashboard.data.refreshData.message}</span>
      </div>
    </div>
    : ''
  }

  <!-- Metrics Widgets -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <MetricsWidget
      metricType="revenue"
      title="Total Revenue"
      value={loadDashboard.data.financialData.metrics.totalRevenue}
      change={loadDashboard.data.financialData.metrics.growthRate}
      period="This Month"
      icon="dollar"
    />
    <MetricsWidget
      metricType="profit"
      title="Total Profit"
      value={loadDashboard.data.financialData.metrics.totalProfit}
      change={loadDashboard.data.financialData.metrics.profitMargin}
      period="This Month"
      icon="chart"
    />
    <MetricsWidget
      metricType="expenses"
      title="Total Expenses"
      value={loadDashboard.data.financialData.metrics.totalExpenses}
      change={loadDashboard.data.financialData.metrics.growthRate}
      period="This Month"
      icon="receipt"
    />
    <MetricsWidget
      metricType="users"
      title="Active Users"
      value={loadDashboard.data.activeUsersCount}
      change={12.5}
      period="This Month"
      icon="users"
    />
  </div>

  <!-- Charts Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white p-6 rounded-lg shadow">
      <FinancialChart
        chartType="line"
        title="Revenue Trend"
        data={loadDashboard.data.financialData.revenue}
        height="300"
      />
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <FinancialChart
        chartType="pie"
        title="Revenue by Category"
        data={loadDashboard.data.financialData.categories}
        height="300"
      />
    </div>
  </div>

  <!-- Recent Activity Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Transactions -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Recent Transactions</h2>
      </div>
      <div class="p-6">
        <TransactionTable transactions={loadDashboard.data.recentTransactions} compact={true} />
      </div>
    </div>

    <!-- Active Users Preview -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Active Users</h2>
      </div>
      <div class="p-6">
        <UserList users={loadDashboard.data.users.filter(u => u.isActive)} compact={true} />
      </div>
    </div>
  </div>
</div>

<script server>
  async function refreshData(formData, request) {
    // This would typically fetch fresh data from external APIs
    // For now, we'll just return a success message
    return {
      success: true,
      message: 'Dashboard data refreshed successfully',
      type: 'success'
    };
  }

  async function exportData(formData, request) {
    // In a real app, this would generate and download a CSV/Excel file
    return {
      success: true,
      message: 'Data exported successfully',
      type: 'success'
    };
  }
</script>
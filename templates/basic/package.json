{
  "name": "puremix-basic-template",
  "version": "0.0.1",
  "description": "PureMix Basic Template with Tailwind CSS",
  "main": "server.js",
  "scripts": {
    "dev": "npm run css:build && puremix dev",
    "build": "npm run css:build && echo 'PureMix project ready for deployment'",
    "start": "npm run css:build && puremix start",
    "typecheck": "npx tsc --noEmit",
    "generate-docs": "puremix generate-docs",
    "css:build": "npm run css:scss && npm run css:tailwind",
    "css:scss": "sass ./app/public/css/styles.scss ./app/public/css/style.css --style=expanded",
    "css:tailwind": "tailwindcss -i ./app/public/css/style.css -o ./app/public/css/output.css --postcss",
    "css:watch": "npm run css:tailwind -- --watch",
    "css:minify": "NODE_ENV=production npm run css:build",
    "css:dev": "npm run css:tailwind",
    "dev:watch": "concurrently \"npm run css:watch\" \"puremix dev\""
  },
  "keywords": ["puremix", "framework", "tailwind", "template"],
  "author": "PureMix Framework",
  "license": "MIT",
  "dependencies": {
    "puremix": "latest"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "postcss-import": "^15.1.0",
    "postcss-scss": "^4.0.9",
    "cssnano": "^6.0.2",
    "sass": "^1.69.5",
    "concurrently": "^8.2.2"
  }
}
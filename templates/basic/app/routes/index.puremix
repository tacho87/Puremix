<layout>main</layout>

<imports>
  import WelcomeCard from '../components/WelcomeCard.puremix'
  import FeatureCard from '../components/FeatureCard.puremix'
</imports>

<head>
  <title>Welcome to PureMix</title>
  <meta name="description" content="Get started with PureMix Framework - the HTML-first full-stack web framework">
</head>

<loader>
  async function loadHome(request, actionResult) {
    const features = [
      {
        id: 1,
        title: 'HTML-First Development',
        description: 'Build with familiar HTML syntax while getting the power of server-side rendering.',
        icon: 'üìù',
        color: 'blue'
      },
      {
        id: 2,
        title: 'Component Architecture',
        description: 'Create reusable components with React-style props and selective updates.',
        icon: 'üß©',
        color: 'green'
      },
      {
        id: 3,
        title: 'Python Integration',
        description: 'Seamlessly mix JavaScript and Python in your server-side logic.',
        icon: 'üêç',
        color: 'yellow'
      },
      {
        id: 4,
        title: 'Zero Build Complexity',
        description: 'No bundlers, no complex tooling. Just pure development productivity.',
        icon: '‚ö°',
        color: 'purple'
      }
    ];

    const stats = {
      visitors: actionResult?.incrementVisitors ? 1543 : 1542,
      components: 25,
      routes: 8
    };

    return {
      data: { features, stats, welcomeMessage: 'Welcome to PureMix Framework!' },
      state: { showFeatures: true, isNewVisitor: !request.session?.visited }

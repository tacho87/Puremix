        <button type="submit" class="btn-primary text-lg px-8 py-4 transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-2xl">
          üöÄ Get Started
          <span class="ml-2 animate-bounce inline-block">‚Üí</span>
        </button>
      </form>
      
      <a href="/about" class="btn-outline text-lg px-8 py-4 transform hover:scale-105 transition-all duration-300 hover:shadow-lg">
        üìñ Learn More
      </a>
    </div>
    
    <div class="mt-8 text-sm text-gray-500">
      <span class="inline-flex items-center space-x-6">
        <span>‚ö° Zero Build Complexity</span>
        <span>üî• Hot Reload</span>
        <span>üêç Python + JavaScript</span>
      </span>
    </div>
  </div>

  <!-- Welcome Card Component -->
  <div class="mb-12">
    <WelcomeCard 
      message={loadHome.data.welcomeMessage}
      isNewVisitor={loadHome.state.isNewVisitor}
      stats={loadHome.data.stats}
    />
  </div>

  <!-- Features Section -->
  {loadHome.state.showFeatures ? 
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">
        Why Choose PureMix?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {loadHome.data.features.map(feature => 
          <FeatureCard 
            feature={feature}
            key={feature.id}
          />
        )}
      </div>
    </div>
  : <div></div>}

  <!-- CTA Section -->
  <div class="bg-gradient-to-r from-primary-50 to-purple-50 rounded-2xl p-8 text-center">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">
      Ready to Build Something Amazing?
    </h3>
    <p class="text-gray-600 mb-6">
      Start your next project with PureMix and experience the future of web development.
    </p>
    <a href="/contact" class="btn-primary text-lg px-8 py-3">
      Contact Us
    </a>
  </div>
</div>

<script server>
  async function incrementVisitors(formData, request) {
    // Mark user as visited
    request.session.visited = true;
    
    return {
      success: true,
      incrementVisitors: true,
      message: 'Welcome! You are visitor #1543'
    };
  }
</script>